---
const {title, list} = Astro.props;
---
<div class="dropdown">
<p>{title}</p>
<div class="dropdown-content">
    <ul>
        {list.map( (item) =>
            <li><a href="/">{item}</a>  </li>
        )}
    </ul>
</div>
</div>
<style>
    p {

    }
    
    .dropdown {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    
    .dropdown-content {
      display: none;
      position: absolute;
      background-color: #154284;
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      z-index: 1;
      margin-top: 3em;
      color: #fff;
      transition: 0.5s;
    }
     ul {
        list-style-type: none;
        color: #fff;
     }
    .dropdown-content a {
      color: #fff;
      font-size: 100%   ;
      padding: 0.5em 0.5em;
      text-decoration: none;
      display: block;
    }
    
    
    .dropdown-content a:hover {
        text-decoration: underline;
    }

    .dropdown:hover .dropdown-content {display: block;}
    
    .dropdown:hover .dropbtn {background-color: #3e8e41;}
    </style>